<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/routinesFragment">


    <fragment
        android:id="@+id/routinesFragment"
        android:name="com.noahjutz.gymroutines.ui.routines.RoutinesFragment"
        android:label="RoutinesFragment"
        tools:layout="@layout/fragment_routines">
        <action
            android:id="@+id/add_routine"
            app:destination="@id/createRoutineActivity">
            <argument
                android:name="routineId"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/exercisesFragment"
        android:name="com.noahjutz.gymroutines.ui.exercises.ExercisesFragment"
        android:label="ExercisesFragment"
        tools:layout="@layout/fragment_exercises">
        <action
            android:id="@+id/add_exercise"
            app:destination="@id/createExerciseActivity">
            <argument
                android:name="exerciseId"
                app:argType="integer" />
        </action>
    </fragment>
    <activity
        android:id="@+id/createExerciseActivity"
        android:name="com.noahjutz.gymroutines.ui.exercises.CreateExerciseActivity"
        android:label="activity_create_exercise"
        tools:layout="@layout/activity_create_exercise">
        <argument
            android:name="exerciseId"
            app:argType="integer" />
    </activity>
    <activity
        android:id="@+id/createRoutineActivity"
        android:name="com.noahjutz.gymroutines.ui.routines.CreateRoutineActivity"
        android:label="CreateRoutineActivity"
        tools:layout="@layout/activity_create_routine">
        <argument
            android:name="routineId"
            app:argType="integer" />
    </activity>
</navigation>