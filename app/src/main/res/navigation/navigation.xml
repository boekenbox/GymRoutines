<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/routinesFragment">


    <fragment
        android:id="@+id/routinesFragment"
        android:name="com.noahjutz.gymroutines.ui.routines.RoutinesFragment"
        tools:layout="@layout/fragment_routines">
        <action
            android:id="@+id/add_routine"
            app:destination="@id/createRoutineFragment" />
    </fragment>
    <fragment
        android:id="@+id/exercisesFragment"
        android:name="com.noahjutz.gymroutines.ui.exercises.ExercisesFragment"
        tools:layout="@layout/fragment_exercises">
        <action
            android:id="@+id/add_exercise"
            app:destination="@id/createExerciseActivity" />
    </fragment>
    <activity
        android:id="@+id/createExerciseActivity"
        android:name="com.noahjutz.gymroutines.ui.exercises.CreateExerciseActivity"
        tools:layout="@layout/activity_create_exercise">
        <argument
            android:name="exerciseId"
            app:argType="integer" />
    </activity>
    <fragment
        android:id="@+id/createRoutineFragment"
        android:name="com.noahjutz.gymroutines.ui.routines.CreateRoutineFragment"
        tools:layout="@layout/fragment_create_routine">
        <argument
            android:name="routineId"
            app:argType="integer" />
        <action
            android:id="@+id/save_routine"
            app:destination="@id/routinesFragment"
            app:popUpTo="@id/routinesFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>